<p id="notice"><%= notice %></p>

<h1>
  <%= @post.title %>
</h1>

<h3>
  <%= @post.body %>
</h3>


<% if user_signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post), class:'btn btn-secondary' %>
	<%= link_to 'Delete', @post, method: :delete, data: {confirm: 'Are you sure you want to delete this post?'}, class:'btn btn-secondary' %>
<% end %>
<%= link_to 'Back', root_path, class:'btn btn-primary' %>
<div class="pt-2">
	<%= social_share_button_tag(@post.title)%>
</div>